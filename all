# flags.cmake

set(MCU_FLAGS
    "-mcpu=cortex-m3 -mthumb"
    "-ffreestanding"
    "-fdata-sections -ffunction-sections"
)

set(CMAKE_C_STANDARD 11)
set(CMAKE_C_STANDARD_REQUIRED ON)

add_compile_options(
    ${MCU_FLAGS}
    -Wall -Wextra -Wno-unused-parameter
)

add_definitions(
    -DSTM32F10X_MD
    -DUSE_STDPERIPH_DRIVER
)

